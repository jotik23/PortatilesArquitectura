<p id="notice"><%= notice %></p>

<section class="panel">
    <header class="panel-heading">
        Ver perfil
    </header>
    <div class="panel-body">
        
          <%= form_for(@perfil) do |f| %>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label">Codigo:</label>
                <div class="col-lg-10">
                	
                	<input class="form-control" id="perfil_codigo" name="perfil[codigo]"  disabled="disabled" value="<%= @perfil.codigo %>" type="number">
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword1" class="col-lg-2 control-label">Nombre:</label>
                <div class="col-lg-10">
                	<input class="form-control" id="perfil_codigo" name="perfil[nombre]" disabled="disabled" value="<%= @perfil.nombre %>" type="text">
                </div>
            </div>

            <div class="form-group" >
                <div class="col-lg-offset-2 col-lg-10" >
                	<br/>
                    <%= link_to 'Editar', edit_perfil_path(@perfil) , :class => 'btn btn-danger'  %>
                    <%= link_to 'Volver', perfils_path , :class => 'btn btn-danger'  %>


                </div>
            </div>
        </form>
    </div>
</section>

<% end %>