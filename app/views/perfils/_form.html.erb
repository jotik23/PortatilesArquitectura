
  <% if @perfil.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@perfil.errors.count, "error") %> prohibited this perfil from being saved:</h2>

      <ul>
      <% @perfil.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<section class="panel">
    <header class="panel-heading">
        Editar Perfil
    </header>
    <div class="panel-body">
        
          <%= form_for(@perfil) do |f| %>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :codigo %></label>
                <div class="col-lg-10">
                    <%= f.number_field :codigo , :class => 'form-control' %>
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword1" class="col-lg-2 control-label"><%= f.label :nombre %></label>
                <div class="col-lg-10">
                    <%= f.text_field :nombre , :class => 'form-control', :style => 'margin-bottom: 10px; ' %>
                </div>
            </div>

            <div class="form-group" >
                <div class="col-lg-offset-2 col-lg-10" >
                    <button type="submit" class="btn btn-primary" >Guardar</button>
                    <% if ver == "1" %>
                      <%= link_to 'Ver', @perfil , :class => 'btn btn-danger'  %>
                    <% end %>
                    <% if editar == "1" %>
                      <%= link_to 'Editar', perfils_path , :class => 'btn btn-danger'  %>
                    <% end %>
                    <% if volver == "1" %>
                      <%= link_to 'Volver', perfils_path , :class => 'btn btn-danger'  %>
                    <% end %>
                </div>
            </div>
        </form>
    </div>
</section>

<% end %>