<section class="panel">
    <header class="panel-heading">
        Editar Dispositivo
    </header>
    <div class="panel-body">
        
          <%= form_for(@dispositivo) do |f| %>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :codigo %></label>
                <div class="col-lg-10">
                  <%= f.text_field :codigo , :class => 'form-control' %> 
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :nombre %></label>
                <div class="col-lg-10">
                  <%= f.text_field :nombre , :class => 'form-control' %> 
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :usuario_creador %></label>
                <div class="col-lg-10">
                  <%= f.text_field :usuario_creador , :class => 'form-control' %> 
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :fecha_creacion %></label>
                <div class="col-lg-10">
                  <%= f.date_select :fecha_creacion , :class => 'form-control' %> 
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :estado %></label>
                <div class="col-lg-10">
                  <%= f.text_field :estado , :class => 'form-control', :style => 'margin-bottom: 10px; ' %> 
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="form-group" >
                <div class="col-lg-offset-2 col-lg-10" >
                    <button type="submit" class="btn btn-primary" >Guardar</button>
                    <% if ver == "1" %>
                      <%= link_to 'Ver', @dispositivo , :class => 'btn btn-danger'  %>
                    <% end %>
                    <% if editar == "1" %>
                      <%= link_to 'Editar', dispositivos_path , :class => 'btn btn-danger'  %>
                    <% end %>
                    <% if volver == "1" %>
                      <%= link_to 'Volver', dispositivos_path , :class => 'btn btn-danger'  %>
                    <% end %>
                </div>
            </div>
        </form>
    </div>
</section>

<% end %>

